{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lumenrtc.dev/abi_framework/config.schema.v1.json",
  "title": "abi_framework config",
  "type": "object",
  "required": ["targets"],
  "additionalProperties": true,
  "properties": {
    "policy": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "max_allowed_classification": {
          "type": "string",
          "enum": ["none", "additive", "breaking"]
        },
        "fail_on_warnings": { "type": "boolean" },
        "require_layout_probe": { "type": "boolean" },
        "rules": {
          "type": "array",
          "items": { "type": "object" }
        },
        "waivers": {
          "type": "array",
          "items": { "type": "object" }
        },
        "waiver_requirements": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "require_owner": { "type": "boolean" },
            "require_reason": { "type": "boolean" },
            "require_expires_utc": { "type": "boolean" },
            "require_approved_by": { "type": "boolean" },
            "require_ticket": { "type": "boolean" },
            "max_ttl_days": { "type": ["integer", "null"], "minimum": 0 },
            "warn_expiring_within_days": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "targets": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["header"],
        "additionalProperties": true,
        "properties": {
          "baseline_path": { "type": "string", "minLength": 1 },
          "policy": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "max_allowed_classification": {
                "type": "string",
                "enum": ["none", "additive", "breaking"]
              },
              "fail_on_warnings": { "type": "boolean" },
              "require_layout_probe": { "type": "boolean" },
              "rules": {
                "type": "array",
                "items": { "type": "object" }
              },
              "waivers": {
                "type": "array",
                "items": { "type": "object" }
              },
              "waiver_requirements": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "require_owner": { "type": "boolean" },
                  "require_reason": { "type": "boolean" },
                  "require_expires_utc": { "type": "boolean" },
                  "require_approved_by": { "type": "boolean" },
                  "require_ticket": { "type": "boolean" },
                  "max_ttl_days": { "type": ["integer", "null"], "minimum": 0 },
                  "warn_expiring_within_days": { "type": "integer", "minimum": 0 }
                }
              }
            }
          },
          "header": {
            "type": "object",
            "required": ["path", "api_macro", "call_macro", "symbol_prefix", "version_macros"],
            "additionalProperties": true,
            "properties": {
              "path": { "type": "string", "minLength": 1 },
              "api_macro": { "type": "string", "minLength": 1 },
              "call_macro": { "type": "string", "minLength": 1 },
              "symbol_prefix": { "type": "string", "minLength": 1 },
              "version_macros": {
                "type": "object",
                "required": ["major", "minor", "patch"],
                "additionalProperties": true,
                "properties": {
                  "major": { "type": "string", "minLength": 1 },
                  "minor": { "type": "string", "minLength": 1 },
                  "patch": { "type": "string", "minLength": 1 }
                }
              },
              "types": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "enable_enums": { "type": "boolean" },
                  "enable_structs": { "type": "boolean" },
                  "enum_name_pattern": { "type": "string" },
                  "struct_name_pattern": { "type": "string" },
                  "ignore_enums": { "type": "array", "items": { "type": "string" } },
                  "ignore_structs": { "type": "array", "items": { "type": "string" } },
                  "struct_tail_addition_is_breaking": { "type": "boolean" }
                }
              },
              "layout": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "enable": { "type": "boolean" },
                  "compiler": { "type": "string" },
                  "cflags": { "type": "array", "items": { "type": "string" } },
                  "include_dirs": { "type": "array", "items": { "type": "string" } }
                }
              },
              "parser": {
                "type": "object",
                "additionalProperties": true,
                "properties": {
                  "backend": { "type": "string", "enum": ["regex", "clang_preprocess"] },
                  "compiler": { "type": "string" },
                  "compiler_candidates": { "type": "array", "items": { "type": "string" } },
                  "args": { "type": "array", "items": { "type": "string" } },
                  "include_dirs": { "type": "array", "items": { "type": "string" } },
                  "fallback_to_regex": { "type": "boolean" }
                }
              }
            }
          },
          "bindings": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "expected_symbols": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 }
              },
              "symbol_docs": {
                "type": "object",
                "additionalProperties": { "type": "string" }
              },
              "deprecated_symbols": {
                "type": "array",
                "items": { "type": "string", "minLength": 1 }
              },
              "generators": {
                "type": "array",
                "items": { "type": "object" }
              }
            }
          },
          "binary": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "path": { "type": "string", "minLength": 1 },
              "allow_non_prefixed_exports": { "type": "boolean" }
            }
          },
          "codegen": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "enabled": { "type": "boolean" },
              "idl_schema_version": { "type": "integer", "const": 1 },
              "idl_output_path": { "type": "string", "minLength": 1 },
              "native_header_output_path": { "type": "string", "minLength": 1 },
              "native_export_map_output_path": { "type": "string", "minLength": 1 },
              "native_header_guard": { "type": "string", "minLength": 1 },
              "native_api_macro": { "type": "string", "minLength": 1 },
              "native_call_macro": { "type": "string", "minLength": 1 },
              "native_constants": {
                "type": "object",
                "additionalProperties": { "type": "string", "minLength": 1 }
              },
              "include_symbols": { "type": "array", "items": { "type": "string", "minLength": 1 } },
              "exclude_symbols": { "type": "array", "items": { "type": "string", "minLength": 1 } },
              "include_symbols_regex": { "type": "array", "items": { "type": "string", "minLength": 1 } },
              "exclude_symbols_regex": { "type": "array", "items": { "type": "string", "minLength": 1 } }
            }
          }
        }
      }
    }
  }
}
